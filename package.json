{
    "name": "ws_task",
    "version": "1.0.0",
    "description": "Template for the WebSocket remote control task",
    "scripts": {
        "build": "webpack",
        "typecheck": "tsc --noEmit",
        "format": "prettier --write \"./**/*.ts\"",
        "lint": "eslint \"./**/*.ts\" --fix",
        "start:dev": "tsnd --respawn --transpile-only ./index.ts",
        "start": "npm run build && node ./dist/main.js"
