        "eslint": "^8.44.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^4.2.1",
        "nodemon": "^2.0.16",
        "prettier": "^2.8.8",
        "ts-loader": "^9.4.4",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.1.6",
        "webpack": "^5.88.1",
        "webpack-cli": "^5.1.4",
        "webpack-node-externals": "^3.0.0"
    },
    "dependencies": {
        "ws": "^8.8.0"
    }
